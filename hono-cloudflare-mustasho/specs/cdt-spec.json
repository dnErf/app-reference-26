{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CDT Library Spec",
  "type": "object",
  "properties": {
    "name": { "type": "string", "description": "Library name" },
    "version": { "type": "string", "description": "Version" },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "file": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "features": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["name", "version", "components"]
}